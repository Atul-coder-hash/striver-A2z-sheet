// for lower case
#include<bits/stdc++.h>
using namespace std;

int main()
{
    string s ="abcdeabc";
    int hash[26]={0};
    
    
    for(int i=0;i<s.size();i++)
    {
        hash[s[i]-'a']++;
        
    }
    
    int q;
    cout<<"enter query:-";
    cin>>q;
    while(q--)
    {char ch;
    cout<<"enter character:-";
    cin>>ch;
    cout<<"counting of character "<<ch<<" in string is:-"<<hash[ch-'a']<<endl;
    }
   
}


// for upper case
#include<bits/stdc++.h>
using namespace std;

int main()
{
    string s ="ABCDEF";
    int hash[26]={0};
    
    
    for(int i=0;i<s.size();i++)
    {
        hash[s[i]-'A']++;
        
    }
    
    int q;
    cout<<"enter query:-";
    cin>>q;
    while(q--)
    {char ch;
    cout<<"enter character:-";
    cin>>ch;
    cout<<"counting of character "<<ch<<" in string is:-"<<hash[ch-'A']<<endl;
    }
  
}


// for both uppercase and lowercase
#include<bits/stdc++.h>
using namespace std;

int main()
{
    string s ="ABCDEF";
    int hash[256]={0};
    
    
    for(int i=0;i<s.size();i++)
    {
        hash[s[i]]++;
        
    }
    
    int q;
    cout<<"enter query:-";
    cin>>q;
    while(q--)
    {char ch;
    cout<<"enter character:-";
    cin>>ch;
    cout<<"counting of character "<<ch<<" in string is:-"<<hash[ch]<<endl;
    }
    
    
    
}



